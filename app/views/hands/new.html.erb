<%= render 'deck' %>
<br>
<%= render 'board' %>

<%= simple_form_for(@hand, url: game_hands_path(@game)) do |f| %>
  <%= f.input :result %>
  <% 5.times do |x| %>
    <%= f.simple_fields_for :table_cards do |ff| %> 
      <%= render 'hidden_card_fields', f:ff, x: x%>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>
